            <Label Content="Авторизация" HorizontalAlignment="Left" Margin="115,10,0,0" VerticalAlignment="Top" Height="90" Width="667"  FontSize="18" FontFamily="Times New Roman" Background="Transparent"/>
        </Grid>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="150"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="TextBoxLog" HorizontalAlignment="Left" Height="31" Margin="160,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <Button Content="Ок" HorizontalAlignment="Left" Margin="200,100,0,0" VerticalAlignment="Top" Width="75" Height="40" Background="#FFB5D5CA" Click="Button_Click"/>
